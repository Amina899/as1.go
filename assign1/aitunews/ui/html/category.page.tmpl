{{template "base" .}}

{{define "title"}}AITU News - {{.Category.Name}}{{end}}

{{define "main"}}
    <h2>{{.Category.Name}} News</h2>
    {{if .News}}
        <ul>
            {{range .News}}
                <li><a href='/news?id={{.ID}}'>{{.Title}}</a></li>
            {{end}}
        </ul>
    {{else}}
        <p>No news available in this category.</p>
    {{end}}
{{end}}
